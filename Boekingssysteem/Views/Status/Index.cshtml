@model Boekingssysteem.ViewModels.PersoonListViewModel

@{
    ViewData["Title"] = "Registratie aanwezigheid";
}

<div class="StatusWindow">
    <div class="container">
        <div class="mb-5">
            <a asp-controller="Status" asp-action="StatusIndividueel" class="btn btn-primary btn-lg mb-2" role="button">Aanwezigheid aanpassen</a>
        </div>                   
            @foreach (var p in Model.Personen)
            {
            @using (Html.BeginForm("Aanpassen", "Status", new { @personeelnummer = $"{p.Personeelnummer}" }, FormMethod.Post))
            {
                <div class="row">
                    <div class="col">
                        @Html.DisplayFor(modelItem => p.Naam)
                        @Html.DisplayFor(modelItem => p.Voornaam)
                    </div>

                    @if (p.PersoonRichtingen == null)
                    {
                        <div class="col">Geen richting</div>
                    }
                    else
                    {

                        <div class="col">

                            @foreach (var item in p.PersoonRichtingen)
                            {
                                @Html.DisplayFor(modelItem => item.Richting.Naam) <br>
                            }

                            @if (p.Admin)
                            {
                                <p>Administratief personeel</p>
                            }
                            else
                            {
                                <p>Leerkracht</p>
                            }
                        </div>
                    }

                    <div class="row">
                        <div class="col">
                            <p>Afwezig</p>
                        </div>

                        <div class="col">
                            <form>
                                <div asp-validation-summary="ModelOnly"></div>
                                @if (p.Aanwezig == true)
                                {
                                    <input type="submit" class="btn btn-primary btn-lg mb-2" value="Aanwezig">
                                }
                                else
                                {                                   
                                    <input type="submit" class="btn btn-primary btn-lg mb-2" value="Afwezig">                                   
                                }
                            </form>
                        </div>

                        <div class="col">
                            <p>Aanwezig</p>
                        </div>
                    </div>
                </div>
                <div class="divider mt-5 mb-5"></div>
            }
        }          
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
