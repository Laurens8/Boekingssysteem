@model Boekingssysteem.ViewModels.PersoonViewModel
@{
    ViewData["Title"] = "Verwijderen";
}

<div class="alert alert-danger mb-5 visible" role="alert">
    alert wordt getoont bij foutmelding. normaal niet zichtbaar.
</div>

<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="col">
        @using (Html.BeginForm("VerwijderenData", "Persoon", FormMethod.Post))
        {
            <div class="col">
                <div class="mb-5">
                    <div class="form-group">
                        <label class="mr-3">Personeelsnummer:</label>
                        <input class="mr-3" type="text" name="Personeelnummer" />
                        <input type="submit" value="Gebruiker zoeken" class="btn btn-primary mb-2" />
                    </div>
                </div>
                <div class="PersoneelInfo">
                    <div class="col">
                        <div class="row">
                            <p>Naam: </p>
                            <p>@ViewBag.naam</p>
                        </div>
                        <div class="row">
                            <p>Voornaam: </p>
                            <p>@ViewBag.voornaam</p>
                        </div>
                        <div class="row">
                            <p>Personeelnummer: </p>
                            <p>@ViewBag.personeelnummer</p>
                        </div>
                    </div>
                </div>

            </div>
        }
        @using (Html.BeginForm("Delete", "Persoon", FormMethod.Post))
        {
            <div class="mt-5">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Personeelnummer" />
                    <input type="submit" value="Gebruiker verwijderen" class="btn btn-primary btn-lg mb-2" />
                </form>
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary mt-4">Terug naar overzicht</a>
</div>