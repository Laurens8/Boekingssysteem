@model Boekingssysteem.ViewModels.FunctieCRUDViewModel

@{
    ViewData["Title"] = "Aanpassen";
}

<a class="btn btn-primary btn-lg mb-2" asp-controller="Functie" asp-action="Index">Terug</a>
<hr />
<form asp-action="Aanpassen">
    <input type="hidden" asp-for="FunctieID" />
    <div class="row mt-5">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Naam" class="control-label">@Html.DisplayNameFor(model => this.Model.Naam)</label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group ml-2">
            <input type="submit" value="Aanpassen" class="btn" style="background-color: hotpink !important; color: white !important;" />
            <a asp-action="Donuts" class="btn" style="background-color: hotpink !important; color: white !important;">Terug</a>
        </div>
    </div>
</form>